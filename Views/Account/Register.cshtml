@{
    ViewData["Title"] = "Lecturer Sign-in";
}
<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        <h2 class="h4 mb-2">Sign in with staff email</h2>
        <p class="text-muted">We’ll email you a one-time sign-in link. No password required.</p>

        @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-1"></i> @err
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form method="post" asp-action="Register" class="row g-3">
            @Html.AntiForgeryToken()
            <div class="col-md-8">
                <label class="form-label">Staff email address</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input name="staffEmail" type="email" class="form-control" placeholder="you@stadio.ac.za" required />
                </div>
                <div class="form-text">Use your official staff email (e.g., stadio.ac.za).</div>
            </div>
            <div class="col-12">
                <button class="btn btn-primary">
                    <i class="bi bi-link-45deg me-1"></i> Send magic link
                </button>
            </div>
        </form>
    </div>
</div>
