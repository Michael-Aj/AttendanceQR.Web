@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Security.Claims
@{
    string Active(string controller, string? action = null)
    {
        var rc = (ViewContext.RouteData.Values["controller"] as string) ?? "";
        var ra = (ViewContext.RouteData.Values["action"] as string) ?? "";
        bool match = rc.Equals(controller, StringComparison.OrdinalIgnoreCase)
                     && (action is null || ra.Equals(action, StringComparison.OrdinalIgnoreCase));
        return match ? "active" : "";
    }

    bool isAuthed = User?.Identity?.IsAuthenticated ?? false;
    bool isLecturer = User?.IsInRole("Lecturer") ?? false;
    string displayName = User?.Identity?.Name ?? "";
    string email = User?.FindFirstValue(ClaimTypes.Email) ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - AttendanceQR</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    @RenderSection("Head", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                <img src="~/img/stadio-logo.png" alt="STADIO" style="height:28px; width:auto; object-fit:contain;">
                <span>AttendanceQR</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav"
                    aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="topNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (isAuthed && isLecturer)
                    {
                        <li class="nav-item">
                            <a class="nav-link @Active("Sessions", "Create")"
                               asp-controller="Sessions" asp-action="Create">
                                <i class="bi bi-qr-code me-1"></i> Create Session (QR)
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Active("Sessions", "List")"
                               asp-controller="Sessions" asp-action="List">
                                <i class="bi bi-table me-1"></i> Sessions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @Active("Sessions", "CompareModule")"
                               asp-controller="Sessions" asp-action="CompareModule">
                                <i class="bi bi-diagram-3 me-1"></i> Compare by Module
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Sessions" asp-action="DownloadTemplate">
                                <i class="bi bi-filetype-xlsx me-1"></i> Template
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @Active("Account", "Register")" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-badge"></i> Lecturer Login
                            </a>
                        </li>
                    }
                </ul>

                <!-- Right side -->
                <div class="d-flex align-items-center gap-2">
                    <a class="btn btn-outline-light btn-sm d-none d-lg-inline"
                       asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-1"></i> Dashboard
                    </a>

                    @if (isAuthed)
                    {
                        <div class="dropdown">
                            <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i>@displayName
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="dropdown-header small text-muted">
                                    @email
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <!-- If your Logout is GET, keep as link; if POST, switch to a form -->
                                <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Register">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Login
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- Main -->
    <main class="container py-4 flex-grow-1">
        <!-- Flash messages via TempData -->
        @if (TempData["Success"] is string s && !string.IsNullOrWhiteSpace(s))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-1"></i> @s
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] is string e && !string.IsNullOrWhiteSpace(e))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-1"></i> @e
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="border-top mt-auto py-3">
        <div class="container d-flex justify-content-between align-items-center small text-muted">
            <div>Powered by <strong>Dr Michael Ajayi</strong></div>
            <div class="d-flex align-items-center gap-2">
                <img src="~/img/stadio-logo.png" alt="STADIO" style="height:18px; width:auto; object-fit:contain;">
                <span>STADIO Higher Education</span>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
